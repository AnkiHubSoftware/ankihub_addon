{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate Temporary Anki Base",
            "type": "shell",
            "command": "python scripts/create_tmp_anki_data_dir.py",
        },
        {
            "label": "Ensure Anki Base",
            "type": "shell",
            "command": "python scripts/ensure_data_dir.py",
            "options": {
                "env": {
                    "ANKI_BASE": "${env:ANKI_BASE}"
                }
            }
        }
    ]
}
